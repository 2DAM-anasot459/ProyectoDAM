<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventarioActivos.Administrador.CrearUsuario"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="Auto,*,Auto"
           BackgroundColor="White">
        <!--Cabecera-->
        <Grid Grid.Row="0"
               BackgroundColor="#E53935"
               HeightRequest="60"
               Padding="16,10,16,10">
            <Label Text="Gestión de Usuarios"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="White"/>
        </Grid>
        <!--Contenido-->
        <ScrollView Grid.Row="1">
            <Grid>
                <!--Tarjeta Nuevo Usuario-->
                <Border BackgroundColor="#FFEFEF"
                       Margin="16,16,16,32"
                       Padding="16,16"
                       HorizontalOptions="Fill"
                       VerticalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <!--Titulo-->
                        <Label Text="Nueva Usuario"
                              FontSize="24"
                              FontAttributes="Bold"
                              TextColor="#212121"
                              Margin="0,0,0,8"/>
                        <!--Nombre Usuario-->
                        <Label Text="Nombre"
                              FontSize="13"
                              TextColor="#555555"/>
                        <Border BackgroundColor="White"
                               Stroke="#DDDDDD"
                               StrokeThickness="1"
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Nombre Usuario"
                                  Margin="10,0"
                                  TextColor="Black"
                                  PlaceholderColor="#A0A0A0"/>
                        </Border>
                        <!--Apellidos Usuario-->
                        <Label Text="Apellidos"
                               FontSize="13"
                               TextColor="#555555"/>
                        <Border BackgroundColor="White"
                                Stroke="#DDDDDD"
                                StrokeThickness="1"
                                HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Apellidos Usuario"
                                   Margin="10,0"
                                   TextColor="Black"
                                   PlaceholderColor="#A0A0A0"/>
                        </Border>
                        <!--Usuario (nombre de inicio de sesión)-->
                        <Label Text="Usuario"
                              FontSize="13"
                              TextColor="#555555"
                               Margin="0,8,0,0"/>
                        <Border BackgroundColor="White"
                               Stroke="#DDDDDD"
                               StrokeThickness="1"
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Nombre de Usuario"
                                  Margin="10,0"
                                  TextColor="Black"
                                  PlaceholderColor="#A0A0A0"/>
                        </Border>
                        <!--Fecha-->
                        <Label Text="Fecha"
                              FontSize="13"
                              TextColor="#555555"
                               Margin="0,8,0,0"/>
                        <Border BackgroundColor="White"
                               Stroke="#DDDDDD"
                               StrokeThickness="1"
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,Auto">
                                <DatePicker Margin="8,0"
                                           VerticalOptions="Center"
                                           TextColor="Black"
                                           Format="dd/MM/yyyy"/>
                                <Image Grid.Column="1"
                                      Source="calendario.png"
                                      HeightRequest="16"
                                      WidthRequest="16"
                                      Margin="0,0,10,0"
                                      VerticalOptions="Center"
                                      HorizontalOptions="End"/>
                            </Grid>
                        </Border>
                        <!--Tipo de usuario (Combo)-->
                        <Label Text="Tipo"
                              FontSize="13"
                              TextColor="#555555"
                               Margin="0,8,0,0"/>
                        <Border BackgroundColor="White"
                               Stroke="#DDDDDD"
                               StrokeThickness="1"
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Tipo de Usuario"
                                      Margin="10,0"
                                      VerticalOptions="Center"
                                      TextColor="#A0A0A0"/>
                                <Image Grid.Column="1"
                                      Source="flechanavegar.png"
                                      HeightRequest="16"
                                      WidthRequest="16"
                                      Margin="0,0,10,0"
                                      VerticalOptions="Center"
                                      HorizontalOptions="End"/>
                            </Grid>
                        </Border>
                        <!--Botón Crear-->
                        <Button Text="Crear Usuario"
                               Margin="0,16,0,0"
                               HeightRequest="50"
                               CornerRadius="25"
                               BackgroundColor="#1565C0"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontSize="16"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </ScrollView>
        <!--Barra de navegación inferior-->
        <Grid Grid.Row="2"
                  BackgroundColor="#E53935"                  
                  Padding="0,6"
                  ColumnDefinitions="*,*,*,*">
            <!--Inicio-->
            <VerticalStackLayout Grid.Column="0"
                                 Spacing="2"
                                 HorizontalOptions="Center">
                <Border BackgroundColor="White"
                        HeightRequest="40"
                        WidthRequest="40">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Image Source="home.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                <Label Text="Inicio"
                       FontSize="12"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </VerticalStackLayout>
            <!--Incidencias-->
            <VerticalStackLayout Grid.Column="1"
                                 Spacing="2"
                                 HorizontalOptions="Center">
                <Border BackgroundColor="White"
                        HeightRequest="40"
                        WidthRequest="40">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Image Source="incidencias.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                <Label Text="Incidencias"
                       FontSize="12"
                       TextColor="White"/>
            </VerticalStackLayout>
            <!--Localización-->
            <VerticalStackLayout Grid.Column="2"
                                 Spacing="2"
                                 HorizontalOptions="Center">
                <Border BackgroundColor="White"
                        HeightRequest="40"
                        WidthRequest="40">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Image Source="localizacion.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                <Label Text="Localización"
                       FontSize="12"
                       TextColor="White"/>
            </VerticalStackLayout>
            <!--Usuarios-->
            <VerticalStackLayout Grid.Column="3"
                                 Spacing="2"
                                 HorizontalOptions="Center">
                <Border BackgroundColor="White"
                        HeightRequest="40"
                        WidthRequest="40">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Image Source="usuario.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                <Label Text="Incidencias"
                       FontSize="12"
                       TextColor="White"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>